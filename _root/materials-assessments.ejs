```{=html}
<div class="table-responsive">
<table class="quarto-listing-table table">
    <thead>
        <td>Issued</td>
        <td>Assessment</td>
        <td>Problems</td>
        <td>Solutions</td>
        <td>Due</td>
    </thead>
    <tbody class="list">
    <% for (const item of items) { %>
        <tr data-index="0" data-categories="null" <%= metadataAttrs(item) %>>            
            <td class="listing-date">
                <%= item.dateissued %>
            </td>
            <td class="listing-title" style="max-width: 420px !important;">
                <strong><%= item.title %></strong><br>
                <p><%= item.summary %></p>
            </td>
            <td class="listing-problemset">
                <% if (item.problemset) { %>
                    <a href="<%= item.problemset %>"><span class="bi bi-file-earmark-text"></span></a>
                <% } %>
            </td>
            <td class="listing-solutions">
                <% if (item.solutions) { %>
                    <a href="<%= item.solutions %>"><span class="bi bi-file-earmark-text"></span></a>
                <% } %>
            </td>
            <td class="listing-date">
                <%= item.datedue %>
            </td>
        </tr>
    <% } %>
    </tbody>
</table>
</div>
